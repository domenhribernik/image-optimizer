version: '3.9'

services:
  web:
    build: .
    container_name: django_app
    restart: always
    expose:
      - "8000"
    env_file:
      - .env
    volumes:
      - .:/app

  nginx:
    image: nginx:alpine
    container_name: nginx_proxy
    restart: always
    ports:
      - "80:80"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf
      - ./nginx/.htpasswd:/etc/nginx/.htpasswd
    depends_on:
      - web
